<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gugu.wegolsu.k_seastem.PirateActivity">

    <data>

        <variable
            name="pirate"
            type="com.gugu.wegolsu.k_seastem.PirateActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:background="#ff167481"
            app:layout_constraintBottom_toTopOf="@+id/tab2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#ff167481"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/tab2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/piratePager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_header"
            app:tabIndicatorColor="#ff187582"
            app:tabSelectedTextColor="#ff187582"
            app:tabTextColor="#ffa9a9a9" />

        <android.support.v4.view.ViewPager
            android:id="@+id/piratePager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab2" />
    </android.support.constraint.ConstraintLayout>
</layout>
