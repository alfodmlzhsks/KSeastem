<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="first"
            type="com.gugu.wegolsu.k_seastem.fragment.FirstMenuFragment" />
    </data>
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imb_catchBan"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/catchban"
            app:layout_constraintBottom_toTopOf="@+id/imb_tac"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imb_eez"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imb_eez"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/eez"
            app:layout_constraintBottom_toTopOf="@+id/tvFuture"
            app:layout_constraintLeft_toRightOf="@+id/imb_catchBan"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imb_tac"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/tac"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvFuture"
            app:layout_constraintTop_toBottomOf="@+id/imb_catchBan" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:text="준비중"
            android:id="@+id/tvFuture"
            android:background="@drawable/btn_2"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imb_tac"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imb_eez"/>
        <!--<ImageButton-->
            <!--android:id="@+id/imb_globalFish"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:background="@drawable/global"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintLeft_toRightOf="@+id/imb_tac"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/imb_eez" />-->

    </android.support.constraint.ConstraintLayout>

</layout>